<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Covid19Detector" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#00B185</item>    // Toolbar
        <item name="colorPrimaryVariant">#00B185</item> //  top App Bar
        <item name="colorOnPrimary">@color/purple_200</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_500</item>
        <item name="colorSecondaryVariant">@color/purple_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorButtonNormal">@color/shape</item>
    </style>



    <style name="textStyle_8">
        <item name="fontFamily">@font/nunito_sans</item>
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontStyle">normal</item>
    </style>

